doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='/styles/tasks.css')
  link(rel='stylesheet' href='/styles/navbar.css')
  title Document
include ../includes/navbar
.button-container
    if pendingTasks
      input#inputButton.form-button.active(type='submit' value='pending')
      input#inputButton.form-button(type='submit' value='reviewing')
      input#inputButton.form-button(type='submit' value='finished')
    if reviewTasks
      input#inputButton.form-button(type='submit' value='pending')
      input#inputButton.active.form-button(type='submit' value='peviewing')
      input#inputButton.form-button(type='submit' value='finished')
    if finishedTasks
      input#inputButton.form-button(type='submit' value='pending')
      input#inputButton.form-button(type='submit' value='reviewing')
      input#inputButton.active.form-button(type='submit' value='finished')
.mainTitle
  h2= mainTitle
hr
ul
each task in userTasks
  li.li-task
    img.bullet(src='/blank-check-bullet.svg')
    span.task-text=  task.name
    span.task-text.id=  task._id 
  hr.hr-li
script(src='/scripts/task.js')
script(src='/scripts/navbar.js')

  
